


@model dotNetEFCoreV3.DataContext.CompanyEntity

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Edit Company</h2>
<form asp-controller="Company" asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" class="form-control"/>
    <div class="form-group">
        <label asp-for="CompanyName"></label>
        <input asp-for="CompanyName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Segmentasi"></label>
        <input asp-for="Segmentasi" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Logo"></label>
        <input asp-for="Logo" class="form-control" />
    </div>
    <div class="form-footer">
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
</form>